# Database (local dev: Docker Postgres, production: Neon)
DATABASE_URL="postgresql://postgres:password@localhost:5432/x402-upload?sslmode=disable"

# AWS S3
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_REGION="us-east-1"
S3_BUCKET="x402-upload-prod"

# x402 Payment Protocol
X402_WALLET_ADDRESS="0xYourPayeeWalletAddress"
CDP_API_KEY_ID="your-cdp-api-key-id"
CDP_API_KEY_SECRET="your-cdp-api-key-secret"

# MPP (Micropayment Protocol on Tempo) â€” optional, enables MPP alongside x402
MPP_SECRET_KEY="your-mpp-secret-key"
MPP_CURRENCY="your-mpp-currency"
MPP_RECIPIENT="your-mpp-recipient-address"
TEMPO_RPC_URL="https://user:pass@rpc.mainnet.tempo.xyz"

# Cron secret (for cleanup endpoint)
CRON_SECRET="your-cron-secret"
